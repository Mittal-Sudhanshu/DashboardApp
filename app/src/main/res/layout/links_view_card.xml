<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16sp"
    android:layout_marginVertical="20sp"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp"
    android:layout_height="116dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:layout_marginHorizontal="8sp">
        <ImageView
            android:layout_width="48dp"
            android:background="@drawable/all_rounded_corners"
            android:id="@+id/logo"
            android:layout_height="48dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/logo"
            android:text="Title Here"
            android:maxLines="1"
            android:maxWidth="225sp"
            android:id="@+id/title"
            android:layout_marginHorizontal="12sp"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/date"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:maxWidth="80sp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/logo"
            android:text="22 Aug 2022" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="2356"
            android:id="@+id/noClicks"
            android:layout_marginHorizontal="12sp"
            style="@style/value"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noClicks"
            android:layout_marginHorizontal="12sp"
            android:layout_alignParentEnd="true"
            android:text="Clicks" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="12sp"
            android:background="@drawable/dotted_border"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link Here"
            android:layout_centerInParent="true"
            android:textColor="#0E6FFF"
            android:id="@+id/link"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/img_2"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>